generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}




model Event{

    id Int @id @default(autoincrement())
    name String
    total_seats Int
    bookings Booking[]

    @@map("events")
}

model Booking{
    
    id Int @id @default(autoincrement())
    event_id Int
    user_id String
    
    event Event @relation(fields: [event_id], references: [id])

    @@unique([event_id, user_id])
    @@map("bookings")

}